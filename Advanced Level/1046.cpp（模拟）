#include<cstdio>
#include<algorithm>
using namespace std;

const int maxn = 100010;
int A[maxn], dis[maxn];
 
 int main() {
 	int n, sum=0, l, r, m;
 	scanf("%d", &n);
 	for(int i = 1; i <= n; i++) {
 		scanf("%d", &A[i]);
 		sum += A[i];
 		dis[i] = sum;
	 }
	 scanf("%d", &m);
	 for(int i = 1; i <= m;i++) {
	 	scanf("%d%d", &l, &r);
	 	if(l > r) {
	 		swap(l, r);
		 }
	 	int temp = dis[r - 1] - dis[l - 1];
	 	printf("%d\n", min(temp, sum - temp));
	 }
	 return 0;
}
